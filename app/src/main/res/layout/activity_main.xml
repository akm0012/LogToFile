<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/writeLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Log"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/writeLogButton" />

    <Button
        android:id="@+id/deleteDirectoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Log Directory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteLogButton" />

</androidx.constraintlayout.widget.ConstraintLayout>